	\usebibmacro{title}\setunit*{\addspace}%
	\usebibmacro{type}\setunit{\bbx@ceperiod}%
	\newblock
	\printlist{location}\setunit*{\bbx@cecolon}%
	\usebibmacro{number}\setunit{\bbx@ceperiod}%
	\newblock
	\usebibmacro{year/date}\setunit{\bbx@ceperiod}%
