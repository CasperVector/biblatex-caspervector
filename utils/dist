#!/usr/bin/make -f
# vim:ts=4:sw=4
#
# Copyright (c) 2011-2012 Casper Ti. Vector
# Public domain.

CP = cp -rL
MV = mv -f
MD = mkdir -p
RM = rm -rf
ZIP = zip -rT
MAKE = make
SELF = utils/dist
PERM = find . -type d -exec chmod 755 '{}' + && \
	find . -type f -exec chmod 644 '{}' +

dist:
	$(SELF) distclean
	$(SELF) doc-pdf
	$(SELF) dist-ctan
	$(SELF) clean

doc-pdf: doc/
	cd doc/ && $(MAKE) && $(MAKE) clean

dir-tds: tex/ doc/
	$(MD) $@/tex/latex/ $@/doc/latex/
	$(CP) tex/ $@/tex/latex/$(TITLE)
	$(CP) doc/ $@/doc/latex/$(TITLE)

dist-tds: $(TITLE)-$(VERSION).tds.zip
$(TITLE)-$(VERSION).tds.zip: dir-tds
	cd $< && $(PERM) && $(ZIP) ../$@ tex/ doc/

dir-ctan: README tex/ doc/ $(TITLE)-$(VERSION).tds.zip
	$(MD) $@/$(TITLE)/
	$(CP) README tex/ doc/ $@/$(TITLE)/
	$(MV) $(TITLE)-$(VERSION).tds.zip $@/

dist-ctan: $(TITLE)-$(VERSION).zip
$(TITLE)-$(VERSION).zip: dir-ctan
	cd $< && $(PERM) && \
		$(ZIP) ../$@ $(TITLE)/ $(TITLE)-$(VERSION).tds.zip

clean:
	cd doc/ && $(MAKE) distclean
	$(RM) dir-ctan/ dir-tds/

distclean:
	$(SELF) clean
	$(RM) $(TITLE)-$(VERSION).tds.zip $(TITLE)-$(VERSION).zip

