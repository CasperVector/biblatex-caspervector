#!/usr/bin/make -f
# vim:ts=4:sw=4
#
# Copyright (c) 2011-2012 Casper Ti. Vector
# Public domain.

dist:
	make distclean
	make doc-pdf
	make dist-ctan
	make clean

doc-pdf: doc/
	cd doc/ && make && make clean

dir-tds: $(TITLE)-tds
$(TITLE)-tds: tex/ doc/ README
	mkdir -p $@/$(TITLE)/tex/latex/ $@/$(TITLE)/doc/latex/
	cp -r tex/ $@/$(TITLE)/tex/latex/$(TITLE)
	cp -r doc/ $@/$(TITLE)/doc/latex/$(TITLE)

dist-tds: $(TITLE)-$(VERSION).tds.zip
$(TITLE)-$(VERSION).tds.zip: $(TITLE)-tds
	cd $< && zip -rT ../$@ $(TITLE)/

dir-ctan: $(TITLE)-ctan
$(TITLE)-ctan: tex/ doc/ README $(TITLE)-$(VERSION).tds.zip
	mkdir -p $@/$(TITLE)/
	cp -r tex/ doc/ README $@/$(TITLE)/
	mv -f $(TITLE)-$(VERSION).tds.zip $@/$(TITLE)/

dist-ctan: $(TITLE)-$(VERSION).zip
$(TITLE)-$(VERSION).zip: $(TITLE)-ctan
	cd $< && zip -rT ../$@ $(TITLE)/

clean:
	cd doc/ && make distclean
	rm -rf $(TITLE)-ctan/ $(TITLE)-tds/

distclean:
	make clean
	rm -rf $(TITLE)-$(VERSION).tds.zip  $(TITLE)-$(VERSION).zip

